<div ng-app="AngularCasts" ng-controller="ScreencastsCtrl">

	<h1>Listing screencasts</h1>

	<table>
		<tr>
			<th>Title</th>
			<th>Summary</th>
			<th>Duration</th>
			<th>Link</th>
			<th>Published at</th>
			<th>Source</th>
			<th>Videourl</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @screencasts.each do |screencast| %>
		<tr>
			<td><%= screencast.title %></td>
			<td><%= screencast.summary %></td>
			<td><%= screencast.duration %></td>
			<td><%= screencast.link %></td>
			<td><%= screencast.published_at %></td>
			<td><%= screencast.source %></td>
			<td><%= screencast.videourl %></td>
			<td><%= link_to 'Show', screencast %></td>
			<td><%= link_to 'Edit', edit_screencast_path(screencast) %></td>
			<td><%= link_to 'Destroy', screencast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>

	<br />

	<%= link_to 'New Screencast', new_screencast_path %>

	<hr>
	<h1>New</h1>
	<label>Title:</label>	
	<input type="text" ng-model="newScreencast.title" placeholder="title">

	<label>Summary:</label>
	<input type="text" ng-model="newScreencast.summary" placeholder="summary">
	
	<button ng-click="createScreencast()">Create</button>

	<h1>Selected</h1>
	<label>Title:</label>
	<input type="text" ng-model="selectedScreencast.title" placeholder="summary">
	<label>Summary:</label>
	<input type="text" ng-model="selectedScreencast.summary" placeholder="summary">
	
	<button ng-click="updateScreencast()">Update</button>
	
	<h1>All</h1>
	<div id="screencast-list-container">
    <ul>
      <li ng-repeat="screencast in screencasts">
        <span>{{screencast.title}} <small>({{screencast.summary}})</small><button ng-click="selectScreencast(screencast)">Select</button><button ng-click="deleteScreencast(screencast)">Delete</button></span>
      </li>
    </ul>
  </div>

</div>
